<div class="loginCard">
  <form class="loginForm" action="/api/users/login" method="POST">
    <div>
      <h4>Im Logging in as a:</h4>
      <input type="checkbox" id="adminlog" name="adminlog" value="adminlog">
<label for="adminlog">Administrator/teacher</label><br>
<input type="checkbox" id="parentlog" name="parentlog" value="parentlog">
<label for="parentlog">Parent</label><br>
    </div>
    <div>
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required />
    </div>

    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required />
    </div>

    <button type="submit">Login</button>
  </form>

  <div class="signUpText">
    <p>Don't have an account? <a href="/signUp">Sign up</a></p>
  </div>

</div>

<script src="/js/login.js"></script>